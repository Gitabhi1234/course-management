<%- include('./partials/header-material') %>
    <% if(success.length>0) {%>
        <div class="success-content">
            <div class="show-success">
                <h3 class="show-success-text">
                    <%=success%>
                </h3>
            </div>
        </div>
        <%}%>

            <div class="main-container">
                <aside class="sidebar">
                    <a href="#">All Material</a>
                    <a href="#">Add New Material</a>
                </aside>
                <main class="content">
                    <h2>Create New Product</h2>
                    <form action="/courses/create" method="post" enctype="multipart/form-data" autocomplete="off">
                        <section class="form-section">
                            <h3>Subject Details</h3>
                            <div class="form-group">
                                <label for="image"> Image</label>
                                <input type="file" id="image" name="image" accept=".jpg">
                                <label for="file"> File</label>
                                <input type="file" id="file" name="file" required>
                            </div>
                            <div class="form-group-grid">
                                <input type="text" name="department_name" placeholder="Department Name" required>
                                <select name="year" id="year">
                                        <option  value="First">First</option>
                                        <option value="Second">Second</option>
                                        <option value="Third">Third</option>
                                        <option value="B.tech">B.tech</option>
                                </select>
                                <input type="text" name="subject_name" placeholder="Subject Name" required>
                            </div>
                        </section>
                        <section class="form-section">
                            <h3>Panel Details</h3>
                            <div class="form-group-grid">
                                <input type="text" name="bgcolor" placeholder="Background Color">
                                <input type="text" name="panelcolor" placeholder="Panel Color">
                                <input type="text" name="textcolor" placeholder="Text Color">
                            </div>
                        </section>
                        <input type="submit" value="Add New Material" class="submit-button">
                    </form>
                </main>
            </div>
            </body>

            </html>